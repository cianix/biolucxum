use strict;
use warnings;

my $cmd = $0;
$cmd =~ s/^.*\///;
print STDERR
  qq{---------------------------------------------------------------------------
$cmd version 0.0.1 (Oct 13, 2018)
Copyright 2018 by Luciano Xumerle <luciano.xumerle\@gmail.com>
This is free software; see the source for copying conditions. There is NO
warranty; not even for MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.
---------------------------------------------------------------------------

SYNTAX:

 > $cmd <file.vcf[.gz]>

NOTE: the script print only PASS position in which
      almost a GT field has a number greater than 0\n
};

if ( defined $ARGV[0] && -f $ARGV[0] )
{
    &getPASS( $ARGV[0] );
}

sub getPASS
{
    my $vcf = shift;

    if ( $vcf =~ m/vcf.gz$/i )
    {
        open( FILE, "gunzip -dc $vcf | " ) || die;
    }
    else
    {
        open( FILE, $vcf ) || die;
    }

    while (<FILE>)
    {
        chomp;
        if (m/^#/)
        {
            print "$_\n";
        }
        elsif (m/\tPASS\t/)
        {
            my @a = split /\t/;
            for ( my $i = 9 ; $i <= $#a ; $i++ )
            {
                my @gg = split ':', $a[$i];
                if ( $gg[0] =~ m/[123456789]/ )
                {
                    print "$_\n";
                    last;
                }
            }
        }
    }
    close FILE;
}

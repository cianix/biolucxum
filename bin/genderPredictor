use strict;
use warnings;

my $read_length = 150;
my $bam         = '';

my $cmd = $0;
$cmd =~ s/^.*\///;
print STDERR
  qq{---------------------------------------------------------------------------
$cmd version 0.0.2 (Aug 20, 2019)
Copyright 2018-19 by Luciano Xumerle <luciano.xumerle\@gmail.com>
This is free software; see the source for copying conditions. There is NO
warranty; not even for MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.
---------------------------------------------------------------------------

SYNTAX:

 > $cmd <file.bam> [read_length]

Default read_length: $read_length\n
};

foreach my $f (@ARGV)
{
    if ( -f $f && $f =~ m/bam$/i )
    {
        $bam = $f;
    }
    elsif ( $f =~ m/^\d+$/ )
    {
        $read_length = $f;
    }
}

if ( $bam ne '' )
{
    open( FILE, qq{samtools idxstats "$bam" | } ) || die;
    my @sex = ( 0, 0 );
    while (<FILE>)
    {
        chomp;
        if ( ( m/^chr[XY]/ || m/^[XY]/ ) && !m/[XY]_/ )
        {
            my @a = split /\s+/;
            if ( $a[0] =~ m/X/ )
            {
                $sex[0] = $a[2] * $read_length / $a[1];
            }
            else
            {
                $sex[1] = $a[2] * $read_length / $a[1];
            }
            print join( "\t", @a, $a[2] * $read_length / $a[1] ), "\n";
        }
    }
    close FILE;
    print qq|RATIO: |, $sex[0] / $sex[1], "\n";
}
